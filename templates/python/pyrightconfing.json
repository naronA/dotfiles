{
  "include": ["src", "tests", "seeder", "migrations", "tools"],

  "exclude": ["**/node_modules", "**/__pycache__"],

  "ignore": [],

  "stubPath": "src/typestubs",
  "venvPath": ".venv",

  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "disableOranizeImports": true,

  "pythonVersion": "3.7",
  "typeCheckingMode": "basic",
  "executionEnvironments": [
    {
      "root": "./",
      "pythonVersion": "3.7",
      "extraPaths": ["src", "src/layer/utils/python"]
    }
  ]
}
